<div id="home">
  <div class="row flex-nowrap justify-content-between align-items-center">
    <div class="col-6 pt-1">
      <h2 class="blog-post-title">My Articles</h2>
    </div>
  </div>
  <hr>

  <ul id="saved_articles-list" class="list-group">
    {{#each articles}}
    <li data-id="{{this.id}}" class="list-group-item">
      <div class="row mb-2">
        <div class="col-md-6">
          <div class="card flex-md-row mb-4 box-shadow h-md-250">
            <div class="card-body d-flex flex-column align-items-start">
              <h3 class="mb-0">
                <a class="text-dark" href={{this.url}}>{{this.headline}}</a>
              </h3>
              <div class="mb-1 text-muted">{{this.date}}</div>
              <p class="card-text mb-auto">{{this.summary}}</p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group pt-3">
                  <button type="button" class="btn btn-sm btn-outline-secondary btn_notes">Notes</button>
                  <button type="button" class="btn btn-sm btn-outline-secondary btn_delete">Delete</button>
                </div>
              </div>
            </div>
            <img class="card-img-right flex-auto d-none d-md-block" src={{this.photo}} alt="Card image">
          </div>
        </div>
      </div>
    </li>
    {{/each}}
  </ul>

</div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>